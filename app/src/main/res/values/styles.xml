<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WeChatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/wechat_colorPrimary</item>
        <item name="colorPrimaryDark">@color/wechat_colorPrimaryDark</item>
        <item name="colorAccent">@color/wechat_colorAccent</item>
        <item name="android:windowBackground">@color/wechat_window_background</item>
    </style>

    <style name="WeChatTextInputLayoutTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/wechat_colorPrimary</item>
        <item name="colorPrimaryDark">@color/wechat_colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textCursorDrawable">@drawable/wechat_bg_cursor</item>
    </style>

    <style name="WeChatLogoTip">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="WeChatLoginInput">
        <item name="android:background">@drawable/wechat_bg_white_corner</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">15</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">@dimen/wechat_spacing</item>
        <item name="android:paddingEnd">@dimen/wechat_spacing</item>
    </style>

    <style name="WechatToolbarTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="WeChatPeerNameText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/wechat_peer_name_size</item>
        <item name="android:lines">1</item>
    </style>

    <style name="WeChatLoginButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/wechat_selector_login</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WeChatImageButton">
        <item name="android:layout_width">@dimen/wechat_toolbar_img_btn_size</item>
        <item name="android:layout_height">@dimen/wechat_toolbar_img_btn_size</item>
        <item name="android:padding">@dimen/wechat_spacing</item>
        <item name="android:background">@null</item>
    </style>

    <style name="WechatSendButton">
        <item name="android:layout_width">@dimen/wechat_send_btn_width</item>
        <item name="android:layout_height">@dimen/wechat_send_btn_height</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/wechat_select_send</item>
    </style>
</resources>