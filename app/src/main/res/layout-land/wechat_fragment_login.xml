<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@id/wechat_logo"
        android:layout_width="@dimen/wechat_logo_size"
        android:layout_height="@dimen/wechat_logo_size"
        android:layout_marginTop="40dp"
        android:src="@drawable/wechat_iv_0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/wechat_et_account_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        style="@style/WeChatLogoTip"
        android:id="@id/wechat_logo_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wechat_spacing"
        android:text="@string/wechat_select_head_image"
        app:layout_constraintTop_toTopOf="@id/wechat_logo"
        app:layout_constraintBottom_toBottomOf="@id/wechat_logo"
        app:layout_constraintStart_toEndOf="@id/wechat_logo"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@id/wechat_et_account_layout"
        android:layout_width="@dimen/wechat_login_account_layout_width"
        android:layout_height="@dimen/wechat_login_account_layout_height"
        android:layout_marginEnd="@dimen/wechat_login_margin"
        android:layout_marginStart="@dimen/wechat_login_margin"
        android:gravity="bottom"
        android:theme="@style/WeChatTextInputLayoutTheme"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/wechat_btn_login">
        <com.google.android.material.textfield.TextInputEditText
            style="@style/WeChatLoginInput"
            android:id="@id/wechat_et_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wechat_login_account_height"
            android:hint="@string/wechat_nick_name"
            android:imeOptions="actionDone"
            tools:text="罗宾"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        style="@style/WeChatLoginButton"
        android:id="@id/wechat_btn_login"
        android:layout_width="0dp"
        android:layout_height="@dimen/wechat_login_button_height"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:text="@string/wechat_login"
        app:layout_constraintTop_toBottomOf="@id/wechat_et_account_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/wechat_et_account_layout"
        app:layout_constraintEnd_toEndOf="@id/wechat_et_account_layout"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/wechat_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wechat_login_description"
        android:textSize="26sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/wechat_btn_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>