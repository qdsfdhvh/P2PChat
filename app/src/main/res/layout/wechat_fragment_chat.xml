<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.AppCompatImageButton
        style="@style/WeChatImageButton"
        android:id="@id/wechat_btn_back"
        android:src="@drawable/wechat_ic_chevron_left_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        style="@style/WechatToolbarTitle"
        android:id="@id/wechat_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wechat_toolbar_title_margin_start_size"
        android:layout_gravity="start"
        tools:text="路飞"
        app:layout_constraintTop_toTopOf="@id/wechat_btn_back"
        app:layout_constraintBottom_toBottomOf="@id/wechat_btn_back"
        app:layout_constraintStart_toEndOf="@id/wechat_btn_back"/>
    <androidx.appcompat.widget.AppCompatImageButton
        style="@style/WeChatImageButton"
        android:id="@id/wechat_btn_more"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/wechat_ic_more_horiz_black_24dp"
        app:layout_constraintTop_toTopOf="@id/wechat_btn_back"
        app:layout_constraintBottom_toBottomOf="@id/wechat_btn_back"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/wechat_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        tools:listitem="@layout/wechat_item_chat_text"
        tools:itemCount="3"
        app:layout_constraintTop_toBottomOf="@id/wechat_btn_back"
        app:layout_constraintBottom_toTopOf="@id/wechat_view_chat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <include
        android:id="@+id/wechat_view_chat"
        layout="@layout/wechat_view_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/wechat_list"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>