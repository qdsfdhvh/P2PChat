<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
   <ImageView
       android:id="@+id/wechat_iv_arrow_up"
       android:layout_width="20dp"
       android:layout_height="10dp"
       android:src="@drawable/wechat_ic_arrow_up_black_24dp"
       android:tint="#616161"
       app:layout_constraintHorizontal_bias="0.4"
       app:layout_constraintRight_toRightOf="@+id/wechat_layout"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       tools:ignore="ContentDescription" />
    <LinearLayout
        android:id="@+id/wechat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wechat_bg_popup_window"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/wechat_iv_arrow_up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/wechat_btn_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/wechat_selector_popup_tv"
            android:paddingTop="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/white"
            android:text="@string/wechat_refresh_list"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>