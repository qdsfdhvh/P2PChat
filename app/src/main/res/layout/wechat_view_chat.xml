<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wechat_colorSecondPrimary"
    android:paddingTop="@dimen/wechat_spacing"
    android:paddingBottom="@dimen/wechat_spacing">
    <androidx.appcompat.widget.AppCompatImageButton
        style="@style/WeChatImageButton"
        android:id="@id/wechat_btn_audio"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/wechat_ic_audio_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/wechat_et_text"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@id/wechat_et_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wechat_spacing"
        android:layout_marginEnd="@dimen/wechat_spacing"
        android:minHeight="50dp"
        android:maxHeight="80dp"
        android:background="@drawable/wechat_bg_white_corner"
        android:padding="4dp"
        android:gravity="center_vertical"
        tools:text="AAAAAAAAAAAAAAAAAA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/wechat_btn_audio"
        app:layout_constraintEnd_toStartOf="@id/wechat_btn_emoji"/>
    <androidx.appcompat.widget.AppCompatImageButton
        style="@style/WeChatImageButton"
        android:id="@id/wechat_btn_emoji"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/wechat_spacing"
        android:src="@drawable/wechat_ic_mood_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/wechat_et_text"
        app:layout_constraintEnd_toStartOf="@id/wechat_barrier"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@id/wechat_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="wechat_btn_more,wechat_btn_send"
        tools:ignore="UnknownId" />
    <androidx.appcompat.widget.AppCompatImageButton
        style="@style/WeChatImageButton"
        android:id="@id/wechat_btn_more"
        android:src="@drawable/wechat_ic_add_circle_outline_black_24dp"
        android:visibility="visible"
        tools:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.seiko.wechat.ui.widget.SendButton
        style="@style/WechatSendButton"
        android:id="@id/wechat_btn_send"
        android:text="@string/wechat_send"
        android:layout_marginEnd="@dimen/wechat_spacing"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>