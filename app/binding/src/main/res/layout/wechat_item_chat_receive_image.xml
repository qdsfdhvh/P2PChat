<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@id/wechat_logo"
        android:layout_width="@dimen/wechat_chat_logo_size"
        android:layout_height="@dimen/wechat_chat_logo_size"
        android:layout_margin="@dimen/wechat_spacing"
        android:layout_gravity="center"
        android:src="@drawable/wechat_iv_0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/wechat_chat_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:minWidth="100dp"
        tools:minHeight="100dp"
        android:layout_marginBottom="@dimen/wechat_spacing"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@id/wechat_logo"
        app:layout_constraintStart_toEndOf="@id/wechat_logo"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>