<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageButton
        style="@style/WeChatImageButton.More"
        android:id="@id/wechat_btn_image"
        android:src="@drawable/wechat_ic_image_black_24dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/wechat_btn_camera"/>
    <androidx.appcompat.widget.AppCompatImageButton
        style="@style/WeChatImageButton.More"
        android:id="@id/wechat_btn_camera"
        android:src="@drawable/wechat_ic_photo_camera_black_24dp"
        app:layout_constraintTop_toTopOf="@id/wechat_btn_image"
        app:layout_constraintBottom_toBottomOf="@id/wechat_btn_image"
        app:layout_constraintStart_toEndOf="@id/wechat_btn_image"
        app:layout_constraintEnd_toStartOf="@id/wechat_btn_location"/>
    <androidx.appcompat.widget.AppCompatImageButton
        style="@style/WeChatImageButton.More"
        android:id="@id/wechat_btn_location"
        android:src="@drawable/wechat_ic_location_on_black_24dp"
        app:layout_constraintTop_toTopOf="@id/wechat_btn_image"
        app:layout_constraintBottom_toBottomOf="@id/wechat_btn_image"
        app:layout_constraintStart_toEndOf="@id/wechat_btn_camera"
        app:layout_constraintEnd_toStartOf="@id/wechat_btn_folder"/>
    <androidx.appcompat.widget.AppCompatImageButton
        style="@style/WeChatImageButton.More"
        android:id="@id/wechat_btn_folder"
        android:src="@drawable/wechat_ic_folder_black_24dp"
        app:layout_constraintTop_toTopOf="@id/wechat_btn_image"
        app:layout_constraintBottom_toBottomOf="@id/wechat_btn_image"
        app:layout_constraintStart_toEndOf="@id/wechat_btn_location"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>